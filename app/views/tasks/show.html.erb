<div class="container">
  <div class="d-inline-flex justify-content-between task-header">
  <h1><%= @task['title'] %></h1>
  <%= link_to 'Edit task', edit_task_path %>
  </div>

  <div class="description">
    <%= @task['details'] %>
  </div>

  <div class="completed">
    <% if @task['completed'] == true %>
      <p><i class="far fa-check-square"></i> This task is completed</p>
    <% else %>
      <p><i class="far fa-square"></i> This task as not been completed yet</p>
    <% end%>
  </div>
  <div class="back-to-list">
    <%= link_to 'Back to list', tasks_path %>
  </div>

</div>

